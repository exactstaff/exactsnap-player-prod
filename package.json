{
  "name": "exactsnap-player",
  "version": "2.1",
  "description": "A PC based signage player for Exact Staff",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "build --ia32",
    "pack": "electron-builder --dir",
    "ship": "build --ia32 -p always"
  },
  "repository": "https://github.com/kervin5/exactsnap-player-prod.git",
  "keywords": [
    "Electron",
    "quick",
    "start",
    "tutorial",
    "demo"
  ],
  "author": "Kervin y Daniel",
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "^4.0.1",
    "electron-builder": "^20.38.4"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "electron-routes": "^1.3.0",
    "electron-updater": "^4.0.6",
    "get-image-colors": "^2.0.0",
    "nedb-promise": "^2.0.1"
  },
  "build": {
    "appId": "com.exactstaff.player",
    "win": {
      "target": "nsis",
      "icon": "build/player.ico"
    },
    "directories": {
      "buildResources": "."
    },
    "files": [
      "**/*"
    ]
  }
}
